cat > .gitignore << 'EOF'
# Byte-compiled / optimized / DLL files
__pycache__/
*.py[cod]
*$py.class

# Distribution / packaging
.Python
build/
develop-eggs/
dist/
downloads/
eggs/
.eggs/
lib/
lib64/
parts/
sdist/
var/
wheels/
*.egg-info/
.installed.cfg
*.egg

# Virtual environments
.venv/
venv/
ENV/
env/

# UV
uv.lock

# Sensitive data - NEVER COMMIT
config/credentials/*.json
config/tokens/*.json
config/tokens/*.enc
config/*.yaml
data/

# Environment variables
.env
.env.local

# Logs
logs/
*.log

# Streamlit
.streamlit/secrets.toml

# Testing
.pytest_cache/
.coverage
htmlcov/

# IDEs
.vscode/
.idea/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db
EOF